<!-- res/drawable/button_arrow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- Set the background color of the arrow button -->
        </shape>
    </item>
    <item android:gravity="center">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <stroke
                    android:width="5dp"
                android:color="#FFFFFF" /> <!-- Set the color of the arrow line -->
            </shape>
        </rotate>
    </item>
</layer-list>